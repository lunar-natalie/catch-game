{
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": ["@typescript-eslint"],
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "overrides": [],
    "rules": {
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": ["error", "unix"],
        "quotes": ["warn", "double"],
        "semi": ["warn", "always"],
        "max-len": [
            "warn",
            {
                "code": 80,
                "ignoreComments": false,
                "ignoreUrls": true
            }
        ]
    }
}
