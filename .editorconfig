root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
indent_style = space
tab_width = 4
max_line_length = 80

[*.html]
indent_style = space
tab_width = 2
max_line_length = 120

[{*.json,.parcelrc}]
indent_style = space
tab_width = 4
max_line_length = 80

[*.md]
indent_style = space
tab_width = 2
max_line_length = 80

[*.ts]
indent_style = space
tab_width = 4
max_line_length = 80

[package.json]
indent_style = space
tab_width = 2
max_line_length = 80
